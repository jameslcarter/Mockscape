{
  "variables": {
    "id": "<#= Faker.Random.Guid() #>"
  },
  "request": {
    "method": "GET",
    "route": "hello/{message}",
    "condition": null
  },
  "response": {
    "delay": 0,
    "status": "OK",
    "body": {
      "id": "<#= Faker.Random.Guid() #>",
      "message": "<#= Request.Route["message"] #>",
      "product": "<#= Faker.Commerce.ProductName() #>",
      "inexistent header item": "<#= Request.Header["inexistent"] #>",
      "inexistent body item": "<#= Request.Body["inexistent"] #>",
      "createdAt": <#= JsonConvert.SerializeObject(System.DateTime.Now) #>
    }
  },
  "callback": {
    "delay": 5000,
    "method": "POST",
    "url": "http://numbersapi.com/random/date?json",
    "timeout": 2000,
    "headers": {
      "X-Foo": "Bar"
    },
    "body": {
      "message": "the response message was <#= Response.Body["id"] #>"
    }
  }
} 